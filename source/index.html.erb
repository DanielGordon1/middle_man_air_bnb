<body class="<%= page_classes %>">
  <!-- Your banner code -->
  <div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.it/1920/1280/?random');">
    <div class="banner-content">
      <h1>WELCOME HOME</h1>
      <p>Rent unique places to stay from local hosts in 190+ countries.</p>
      <input type="submit" class="btn btn-secondary-outline button" value="How It Works">
      <div class="hero_content-footer">
        <form action="#" class="form-inline">
          <input type="text" class="form-control input-lg" placeholder="Check-in">
          <input type="text" class="form-control input-lg" placeholder="Check-out">
          <select name="" id="" class="form-control input-lg">
            <option value="1">1 person</option>
            <option value="2">2 persons</option>
            <option value="3">3 persons</option>
          </select>
          <input type="submit" class="btn btn-primary btn-lg buttonpink" value="Search">
        </form>
      </div>
    </div>
  </div>
  <!-- Your features code -->

  <div class="text-center padded features">
   <div class="container">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "images/globe.png" %>
      <h2>Discover the world</h2>
      <p>The earth is your new home.</p>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "images/dollar.png" %>
      <h2>Pay online</h2>
      <p>No cash issues anymore.</p>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "images/beer.png" %>
      <h2>Meet people</h2>
      <p>Discover new cultures and lifestyle.</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= image_tag "images/heart.png" %>
      <h2>Share and love</h2>
      <p>Join a community you will love.</p>
    </div>
  </div>
</div>


<!-- Your cards code -->

<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center">Your next trip</h2>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
          <div class="card-category">Paris</div>
          <div class="card-description">
            <h2>Seb's home</h2>
            <p>Charming room with patio</p>
          </div>
          <%= image_tag "images/seb.jpg", class: "card-user avatar avatar-large" %>
          <a class="card-link" href="#"></a>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
          <div class="card-category">Brussels</div>
          <div class="card-description">
            <h2>Anne's home</h2>
            <p>Lovely house</p>
          </div>
          <%= image_tag "images/anne.jpg", class: "card-user avatar avatar-large" %>
          <a class="card-link" href="#"></a>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
          <div class="card-category">London</div>
          <div class="card-description">
            <h2>Romain's home</h2>
            <p>Nice flat in Piccadilly Circus</p>
          </div>
          <%= image_tag "images/romain.jpeg", class: "card-user avatar avatar-large" %>
          <a class="card-link" href="#"></a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Your newsletter code -->
<div class="text-center padded" id="newsletter">
  <h2>Get news from us</h2>
  <p>Leave us your mail and get news from us</p>
  <form class="form-inline">
    <input type="email" placeholder="daniel@gmail.com" class="form-control">
    <input type="submit" value="Get Some" class="btn btn-primary btn-bordered btn-bordered-primary">
  </form>
</div>

